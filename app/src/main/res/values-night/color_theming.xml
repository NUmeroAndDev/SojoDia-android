<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/BaseTheme">
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/primaryVariantDark</item>
        <item name="colorSecondary">@color/secondaryDark</item>
        <item name="colorSecondaryVariant">@color/secondaryDark</item>
        <item name="android:colorBackground">@color/backgroundDark</item>
        <item name="colorSurface">@color/surfaceDark</item>
        <item name="colorError">@color/errorDark</item>

        <item name="colorDivider">@color/dividerDark</item>

        <item name="colorOnPrimary">@color/onPrimaryDark</item>
        <item name="colorOnSecondary">@color/onSecondaryDark</item>
        <item name="colorOnBackground">@color/onBackgroundDark</item>
        <item name="colorOnSurface">@color/onSurfaceDark</item>
        <item name="colorOnError">@color/onErrorDark</item>

        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryDark</item>
        <item name="android:colorControlHighlight">@color/colorControlHighlightDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomSheetDialogTheme.Rounded">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle.Rounded</item>
        <item name="android:colorBackground">@color/backgroundDark</item>
    </style>
</resources>