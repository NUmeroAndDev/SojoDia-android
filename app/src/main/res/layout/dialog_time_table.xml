<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextColor="?attr/colorSecondary"
        app:titleTextColor="?attr/colorSecondary" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom_sheet_control_bar"
        app:layout_constraintEnd_toEndOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="@id/toolbar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/headerHourTextView"
        android:layout_width="@dimen/time_table_dialog_hour_text_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/time_table_dialog_vertical_text_margin"
        android:paddingBottom="@dimen/time_table_dialog_vertical_text_margin"
        android:text="@string/hour"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="@dimen/time_table_dialog_header_text"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/timeTableRecyclerView"
        app:layout_constraintEnd_toStartOf="@+id/headerWeekdayTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <View
        android:id="@+id/divider"
        android:layout_width="@dimen/time_table_dialog_row_divider"
        android:layout_height="0dp"
        android:background="?attr/colorDivider"
        app:layout_constraintBottom_toBottomOf="@+id/headerHourTextView"
        app:layout_constraintStart_toEndOf="@+id/headerHourTextView"
        app:layout_constraintTop_toTopOf="@+id/headerHourTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/headerWeekdayTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/time_table_dialog_vertical_text_margin"
        android:paddingBottom="@dimen/time_table_dialog_vertical_text_margin"
        android:text="@string/weekday"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="@dimen/time_table_dialog_header_text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/headerHourTextView"
        app:layout_constraintEnd_toStartOf="@+id/headerSaturdayTextView"
        app:layout_constraintStart_toEndOf="@+id/headerHourTextView"
        app:layout_constraintTop_toTopOf="@+id/headerHourTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/headerSaturdayTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/time_table_dialog_vertical_text_margin"
        android:paddingBottom="@dimen/time_table_dialog_vertical_text_margin"
        android:text="@string/saturday"
        android:textColor="@color/time_table_dialog_saturday_text"
        android:textSize="@dimen/time_table_dialog_header_text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/headerWeekdayTextView"
        app:layout_constraintEnd_toStartOf="@id/headerSundayTextView"
        app:layout_constraintStart_toEndOf="@+id/headerWeekdayTextView"
        app:layout_constraintTop_toTopOf="@+id/headerWeekdayTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/headerSundayTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:paddingTop="@dimen/time_table_dialog_vertical_text_margin"
        android:paddingBottom="@dimen/time_table_dialog_vertical_text_margin"
        android:text="@string/sunday"
        android:textColor="@color/time_table_dialog_sunday_text"
        android:textSize="@dimen/time_table_dialog_header_text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/headerSaturdayTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/headerSaturdayTextView"
        app:layout_constraintTop_toTopOf="@+id/headerSaturdayTextView" />

    <View
        android:id="@+id/bottomDivider"
        android:layout_width="0dp"
        android:layout_height="@dimen/time_table_dialog_row_divider"
        android:background="?attr/colorDivider"
        app:layout_constraintBottom_toTopOf="@+id/timeTableRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerHourTextView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/timeTableRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/notSchoolTermChip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomDivider"
        tools:listitem="@layout/holder_time_table_row" />

    <View
        android:id="@+id/chipTopDivider"
        android:layout_width="0dp"
        android:layout_height="@dimen/time_table_dialog_row_divider"
        android:background="?attr/colorDivider"
        app:layout_constraintBottom_toBottomOf="@id/timeTableRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--FIXME checkedIconのTint-->
    <com.google.android.material.chip.Chip
        android:id="@+id/notSchoolTermChip"
        style="@style/Widget.MaterialComponents.Chip.Filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="学休期間"
        app:chipBackgroundColor="@color/bg_chip_color"
        app:chipStrokeColor="@color/stroke_chip"
        app:chipStrokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeTableRecyclerView" />

    <TextView
        android:id="@+id/bottom_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:text="@string/time_table_dialog_description"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>